package  com.vsc.app {		import flash.display.MovieClip;	import flash.text.TextField;	import com.vsc.mc.VSCWord;	import com.vsc.mc.VSCDef;	import flash.events.MouseEvent;	import flash.filters.*;	import com.greensock.easing.Expo;	import com.greensock.TweenLite;	import com.greensock.plugins.TweenPlugin;	import com.greensock.plugins.DropShadowFilterPlugin;		public class Main extends MovieClip {		private var currentClip:VSCWord;		public var tweenTime : Number = 0.415;				public function Main() {			TweenPlugin.activate([DropShadowFilterPlugin]);			// create vscword			var _wc:VSCWord = new VSCWord("1", "Longwordthatneedstomatch");			this.addChild(_wc);			_wc.x = 10;			_wc.y = 10;			_wc.addEventListener(MouseEvent.MOUSE_DOWN, mousePress);			var _dc:VSCDef = new VSCDef("1","This is a long definition of what this word means. Somtimes you need more than one sentence to do it.");			this.addChild(_dc);			_dc.x = 395;			_dc.y = 10;		}				private function mousePress(event:MouseEvent):void {			currentClip = VSCWord(event.target);			currentClip.startDrag();			TweenLite.to(currentClip, .25, {scaleX:1.12, scaleY:1.12, dropShadowFilter:{blurX:5, blurY:5, distance:10, alpha:0.6}, ease:Expo.easeInOut});			currentClip.parent.addChild(currentClip);			stage.addEventListener(MouseEvent.MOUSE_UP, item_onMouseUP);		}				private function item_onMouseUP(event:MouseEvent):void {			currentClip = VSCWord(event.target);			currentClip.stopDrag();			var _targPar:VSCDef = VSCDef(this.getChildByName("d1"));			var _targ:MovieClip = MovieClip(_targPar.getChildByName("db1"));			if(_targ.hitTestObject(currentClip)) {				var _par:MovieClip = MovieClip(_targ.parent);				TweenLite.to(currentClip, .35, {x:_par.x + 50, y:_par.y + 5, scaleX:1.00, scaleY:1.00, dropShadowFilter:{blurX:2, blurY:2, distance:2, alpha:1}, ease:Expo.easeInOut});			} else {				TweenLite.to(currentClip, .35, {scaleX:1.00, scaleY:1.00, dropShadowFilter:{blurX:2, blurY:2, distance:2, alpha:1}, ease:Expo.easeInOut});			}			stage.removeEventListener(MouseEvent.MOUSE_UP, item_onMouseUP);		}	}	}