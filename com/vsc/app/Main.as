package  com.vsc.app {		import flash.display.MovieClip;	import flash.text.TextField;	import com.vsc.mc.VSCWord;	import com.vsc.mc.VSCDef;	import flash.events.MouseEvent;	import flash.filters.*;		public class Main extends MovieClip {		private var currentClip:VSCWord;				public function Main() {			// create vscword			var _wc:VSCWord = new VSCWord("1", "Longwordthatneedstomatch");			this.addChild(_wc);			_wc.x = 10;			_wc.y = 10;			_wc.addEventListener(MouseEvent.MOUSE_DOWN, mousePress);			var _dc:VSCDef = new VSCDef("1","This is a long definition of what this word means. Somtimes you need more than one sentence to do it.");			this.addChild(_dc);			_dc.x = 395;			_dc.y = 10;		}				private function mousePress(event:MouseEvent):void {			currentClip = VSCWord(event.target);			currentClip.startDrag();			currentClip.scaleX = currentClip.scaleY = 1.12;			var thisShadow:DropShadowFilter = currentClip.filters[0];			thisShadow.distance = 10;			thisShadow.color = 0x121212;			thisShadow.blurX = 5;			thisShadow.blurY = 5;			thisShadow.quality = 5;			thisShadow.inner = false;			currentClip.filters = [thisShadow];			currentClip.parent.addChild(currentClip);			stage.addEventListener(MouseEvent.MOUSE_UP, item_onMouseUP);		}				private function item_onMouseUP(event:MouseEvent):void {			currentClip = VSCWord(event.target);			stage.removeEventListener(MouseEvent.MOUSE_UP, item_onMouseUP);			currentClip.scaleX = currentClip.scaleY = 1.00;			var thisShadow:DropShadowFilter = currentClip.filters[0];			thisShadow.distance = 2;			thisShadow.color = 0x323232;			thisShadow.blurX = 2;			thisShadow.blurY = 2;			thisShadow.quality = 5;			thisShadow.inner = false;			currentClip.filters = [thisShadow];			currentClip.stopDrag();			var _targPar:VSCDef = VSCDef(this.getChildByName("d1"));			var _targ:MovieClip = MovieClip(_targPar.getChildByName("db1"));			trace("target = " + _targ.name);			if(_targ.hitTestObject(currentClip)) {				var _par:MovieClip = MovieClip(_targ.parent);				trace("parent = " + _targ.parent.name);				currentClip.x = _par.x + 50;				currentClip.y = _par.y + 5;			}					}	}	}